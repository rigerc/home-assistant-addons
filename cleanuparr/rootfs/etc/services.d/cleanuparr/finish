#!/usr/bin/with-contenv bashio
# shellcheck shell=bash


declare APP_EXIT_CODE=${1}

bashio::log.warning "Cleanuparr exited with code ${APP_EXIT_CODE}"

# Halt the entire add-on if Cleanuparr crashes
if [ "${APP_EXIT_CODE}" -ne 0 ]; then
    bashio::log.error "Cleanuparr crashed - stopping add-on"
    exec /run/s6/basedir/bin/halt
fi
