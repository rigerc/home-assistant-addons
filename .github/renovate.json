{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "commitMessagePrefix": "‚è´",
  "commitMessageTopic": "{{depName}}",

  "includePaths": [
    "romm/**",
    "profilarr/**",
    "cleanuparr/**"
  ],

  "customManagers": [
    {
      "customType": "regex",
      "description": "Extract addon version and Docker image from config.yaml",
      "managerFilePatterns": ["*/config.yaml"],
      "matchStrings": [
        "version:\\s+\\\"?v?(?<currentValue>[^\\\"\\s]+)\\\"?\\s*#\\s*(?<datasource>docker|github):(?<depName>[^\\s]+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}docker{{/if}}",
      "versioningTemplate": "docker"
    }
  ],

  "packageRules": [
    {
      "description": "Label major addon updates for review",
      "matchUpdateTypes": ["major"],
      "matchFileNames": ["*/config.yaml"],
      "labels": ["UPDATE-MAJOR"]
    },
    {
      "description": "Group Home Assistant base image updates",
      "groupName": "Home Assistant base images",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:ghcr\\.io/)?home-assistant/(?:aarch64|amd64|armv7|armhf|i386)-base$"]
    }
  ]
}
