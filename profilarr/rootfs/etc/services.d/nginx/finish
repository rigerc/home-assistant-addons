#!/usr/bin/env bashio
# ==============================================================================
# Home Assistant Add-on: Profilarr
# Take down the S6 supervision tree when nginx fails
# ==============================================================================

declare NGINX_EXIT_CODE=${1}

if [[ "${NGINX_EXIT_CODE}" -ne 0 ]] && [[ "${NGINX_EXIT_CODE}" -ne 256 ]]; then
  bashio::log.warning "Nginx exited (${NGINX_EXIT_CODE}) - Halt add-on"
  echo "${NGINX_EXIT_CODE}" > /run/s6-linux-init-container-results/exitcode
  exec /run/s6/basedir/bin/halt
fi

bashio::log.info "Nginx service restart after closing (${NGINX_EXIT_CODE})"
