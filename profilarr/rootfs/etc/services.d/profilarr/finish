#!/usr/bin/env bashio
# ==============================================================================
# Home Assistant Add-on: Profilarr
# Take down the S6 supervision tree when Profilarr fails
# ==============================================================================

declare APP_EXIT_CODE=${1}

if [[ "${APP_EXIT_CODE}" -ne 0 ]] && [[ "${APP_EXIT_CODE}" -ne 256 ]]; then
  bashio::log.warning "Profilarr exited (${APP_EXIT_CODE}) - Halt add-on"
  echo "${APP_EXIT_CODE}" > /run/s6-linux-init-container-results/exitcode
  exec /run/s6/basedir/bin/halt
fi

bashio::log.info "Service restart after closing (${APP_EXIT_CODE})"
