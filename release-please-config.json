  "always-update": true,
  "force-tag-creation": true,
  "include-v-in-tag": false,
  "include-v-in-release-name": false,
  "extra-label": "release-draft",
  "draft": true,
  "prerelease": false,
  "exclude-paths": [
    "*/README.md",
    "README.md",
    ".github/README.md",
    "manifest.json",
    ".github/dependabot.yml"
  ],
  "packages": {
    "Romm": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
