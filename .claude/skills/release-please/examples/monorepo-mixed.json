{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "changelog-host": "https://github.com",
  "plugins": [
    "node-workspace",
    {
      "type": "node-workspace",
      "updatePeerDependencies": true
    }
  ],
  "packages": {
    ".": {},
    "packages/web": {
      "component": "web"
    },
    "packages/api": {
      "release-type": "python",
      "package-name": "my-api",
      "component": "api"
    },
    "packages/shared": {
      "component": "shared"
    },
    "packages/mobile": {
      "release-type": "rust",
      "component": "mobile"
    }
  }
}
